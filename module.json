{
    "name": "mana-circles",
    "title": "Patria Mori Mana Circles add-on module",
    "description": "This module extends the mana-base module by adding support for circles and affinities.",
    "authors": [
        {
            "name": "Jonas"
        }
    ],
    "version": "0.1.0",
    "compatibility": {
        "minimum": 10,
        "verified": 10,
        "maximum": 11
    },
    "scripts": [
        "scripts/circles.mjs",
        "scripts/model/circle.js",
        "scripts/model/affinity.js",
        "scripts/model/spell.js"
    ],
    "languages": [
        {
            "lang": "en",
            "name": "English",
            "path": "languages/en.json"
        }
    ],
    "styles": [
        "styles/circles.css"
    ],
    "url": "https://github.com/Patria-Mori/mana-circles",
    "relationships": {
        "systems": [
            {
                "id": "dnd5e",
                "type": "system",
                "manifest": "https://raw.githubusercontent.com/foundryvtt/dnd5e/master/system.json",
                "compatibility": {
                    "verified": "2.1.5"
                }
            }
        ],

        "requires": [
            {
                "id": "mana-base",
                "type": "module",
                "manifest": "https://raw.githubusercontent.com/Patria-Mori/mana-base/master/module.json",
                "compatibility": {
                    "verified": "0.1.1"
                }
            }
        ]
    }
}